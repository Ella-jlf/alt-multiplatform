<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"
    android:orientation="vertical">

    <EditText
        android:id="@+id/vRegistrationName"
        style="@style/EditTextInput"
        android:hint="@string/registration_name" />

    <EditText
        android:id="@+id/vRegistrationCity"
        style="@style/EditTextInput"
        android:hint="@string/registration_city" />

    <EditText
        android:id="@+id/vRegistrationWorkplace"
        style="@style/EditTextInput"
        android:hint="@string/registration_work" />

    <EditText
        android:id="@+id/vRegistrationStudyPlace"
        style="@style/EditTextInput"
        android:hint="@string/registration_study" />

    <EditText
        android:id="@+id/vRegistrationAge"
        style="@style/EditTextInput"
        android:hint="@string/registration_age"
        android:inputType="number" />

    <TextView
        android:id="@+id/vRegistrationPhone"
        style="@style/StandardText"
        tools:text="+375000000000" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/vApply"
        style="@style/ButtonSignUp"
        android:background="@color/Orange"
        android:enabled="false"
        android:text="@string/registration_apply" />
</LinearLayout>